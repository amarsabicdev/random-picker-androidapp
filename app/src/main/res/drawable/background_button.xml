<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <!-- Postavljanje transparentne boje pozadine (npr. 50% prozirnosti) -->
            <solid android:color="#80ffffff"/>
            <!-- Dodavanje vidljivih ivica -->
            <stroke
                android:width="2dp"
            android:color="#000000"/>

            <padding
                android:left="8dp"
                android:top="8dp"
                android:right="8dp"
                android:bottom="8dp"/>
        </shape>
    </item>

</selector>